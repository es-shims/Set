{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"array-bracket-newline": 0,
		"id-length": 0,
		"max-lines-per-function": 0,
		"max-statements": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"ArrayFrom",
				"Call",
				"CreateIterResultObject",
				"DefinePropertyOrThrow",
				"GetIntrinsic",
				"GetIterator",
				"HasOwnProperty",
				"OrdinaryObjectCreate",
				"OrdinarySetPrototypeOf",
				"IsArray",
				"IsCallable",
				"IteratorClose",
				"IteratorStep",
				"ToNumber",
				"ToString",
				"Type",
			],
		}],
		"no-magic-numbers": [2, {
			"ignore": [0, 1, 2]
		}],
		"func-name-matching": 0,
	},

	"overrides": [
		{
			"files": ["test/**/*.js"],
			"rules": {
				"no-magic-numbers": 0,
			},
		},
	],
}
